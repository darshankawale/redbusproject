@model IEnumerable<redbus.ConfirmBooking>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Booking Details</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            margin: 0;
            padding: 0;
            display: flex;
            height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f0f2f5;
        }

        #sidebar {
            width: 250px;
            background-color: #343a40;
            color: white;
            transition: all 0.3s ease;
        }

            #sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 15px 20px;
            }

                #sidebar a:hover {
                    background-color: #495057;
                }

            #sidebar .nav-link.active {
                background-color: #007bff;
            }

        #toggle-btn {
            position: absolute;
            top: 10px;
            left: 10px;
            z-index: 1000;
            background-color: #343a40;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
        }

        .collapsed-sidebar {
            display: none;
        }

        #content {
            flex: 1;
            overflow-y: auto;
        }

        .table-container {
            max-width: 95%;
            margin: 30px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

        h4 {
            text-align: center;
            margin-bottom: 25px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <!-- Toggle Button -->
    <button id="toggle-btn" onclick="toggleSidebar()">☰</button>

    <!-- Sidebar -->
    <div id="sidebar">
        <a href="/Home/Admindash">Dashboard</a>
        <a href="/Home/AddRoutes">Add Routes</a>
        <a href="/Home/manageroutes">Manage Routes</a>
        <a href="/Home/Addpickup">pickup and baording</a>

        <a href="/Home/Addbuses">Add Buses</a>
        <a href="/Home/managebuses">Manage Buses</a>
        <a href="/Home/bookingdetails">Booking Details</a>
        <a href="/Home/canceldetails">Cancel Details</a>
        <a href="#">User Details</a>
    </div>

    <!-- Main Content -->
    <div id="content">
        <!-- Top Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <span class="navbar-brand">Admin Panel</span>
                <div class="collapse navbar-collapse justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#">Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Booking Details Table -->
        <div class="table-container">
            <h4>Booking Details</h4>
          
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.BusId)</th>
                        <th>@Html.DisplayNameFor(model => model.SeatNumber)</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                        <th>@Html.DisplayNameFor(model => model.Mobile)</th>
                        <th>@Html.DisplayNameFor(model => model.Age)</th>
                        <th>@Html.DisplayNameFor(model => model.Fare)</th>
                        <th>@Html.DisplayNameFor(model => model.BookingTime)</th>
                        <th>@Html.DisplayNameFor(model => model.boardingpoint)</th>
                        <th>@Html.DisplayNameFor(model => model.pickuppoint)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.BusId)</td>
                            <td>@Html.DisplayFor(modelItem => item.SeatNumber)</td>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.Mobile)</td>
                            <td>@Html.DisplayFor(modelItem => item.Age)</td>
                            <td>@Html.DisplayFor(modelItem => item.Fare)</td>
                            <td>@Html.DisplayFor(modelItem => item.BookingTime)</td>
                            <td>@Html.DisplayFor(modelItem => item.boardingpoint)</td>
                            <td>@Html.DisplayFor(modelItem => item.pickuppoint)</td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.BookingId },new { @class = "btn btn-sm btn-warning" }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.BookingId }, new { @class = "btn btn-sm btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById("sidebar");
            sidebar.classList.toggle("collapsed-sidebar");
        }
    </script>
</body>
</html>
