@model redbus.ConfirmBooking

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Print Ticket</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.6.2/css/bootstrap.min.css" />
    <style>
        .ticket-box {
            max-width: 600px;
            margin: 40px auto;
            padding: 30px;
            border: 1px solid #ccc;
            border-radius: 12px;
            box-shadow: 0 0 10px rgba(0,0,0,0.15);
            background-color: #fdfdfd;
        }

        .ticket-header {
            text-align: center;
            margin-bottom: 20px;
        }

        .ticket-detail {
            font-size: 16px;
        }

            .ticket-detail strong {
                width: 150px;
                display: inline-block;
            }

        .print-btn {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="ticket-box">
        <div class="ticket-header">
            <h3 class="text-primary">Your Travel Ticket</h3>
            <p>Thank you for booking with RedBus Clone</p>
        </div>

        <div class="ticket-detail">
            <p><strong>Booking ID:</strong> @Model.BookingId</p>
            <p><strong>Passenger Name:</strong> @Model.Name</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Mobile:</strong> @Model.Mobile</p>
            <p><strong>Bus ID:</strong> @Model.BusId</p>
            <p><strong>Seat Number:</strong> @Model.SeatNumber</p>
            <p><strong>Age:</strong> @Model.Age</p>
            <p><strong>Fare:</strong> ₹@Model.Fare</p>
            <p><strong>Boarding Point:</strong> @Model.boardingpoint</p>
            <p><strong>Pickup Point:</strong> @Model.pickuppoint</p>
            <p><strong>Booking Time:</strong> @Model.BookingTime?.ToString("f")</p>
        </div>

        <div class="text-center print-btn">
            <button class="btn btn-success" onclick="window.print()">🖨️ Print Ticket</button>
        </div>
    </div>
</body>
</html>
